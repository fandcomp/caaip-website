<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GitHub Setup - CAAIP Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <style>
    .setup-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .card-hover {
      transition: all 0.3s ease;
    }
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="setup-bg min-h-screen">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center">
            <button onclick="goBack()" class="mr-4 p-2 rounded-lg hover:bg-gray-100 transition-colors">
              <i data-lucide="arrow-left" class="h-5 w-5 text-gray-600"></i>
            </button>
            <img src="/images/logo-itb.png" alt="Logo CAAIP" class="h-8 w-auto mr-3">
            <h1 class="text-xl font-bold text-gray-900">GitHub Setup</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">Admin</span>
          <button onclick="logout()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            Logout
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <!-- Header -->
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">Pengaturan GitHub</h2>
        <p class="text-white/80">Konfigurasi autentikasi GitHub untuk editor konten</p>
      </div>

      <!-- Setup Card -->
      <div id="setup-card" class="bg-white rounded-lg shadow-xl overflow-hidden card-hover">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 flex items-center">
            <i data-lucide="github" class="h-5 w-5 mr-2 text-gray-900"></i>
            Autentikasi GitHub
          </h3>
          <p class="text-sm text-gray-600 mt-1">Hubungkan akun GitHub untuk mengedit konten</p>
        </div>

        <div class="p-6">
          <!-- Status Section -->
          <div id="auth-status" class="mb-6 p-4 rounded-lg bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div id="status-icon" class="w-3 h-3 bg-gray-400 rounded-full mr-3"></div>
                <div>
                  <p id="status-text" class="font-medium text-gray-900">Memeriksa status autentikasi...</p>
                  <p id="status-detail" class="text-sm text-gray-600">Mohon tunggu sebentar</p>
                </div>
              </div>
              <div id="user-info" class="hidden flex items-center">
                <img id="user-avatar" src="" alt="Avatar" class="w-8 h-8 rounded-full mr-3">
                <span id="user-name" class="text-sm font-medium text-gray-900"></span>
              </div>
            </div>
          </div>

          <!-- Instructions -->
          <div id="instructions" class="mb-6">
            <h4 class="text-lg font-medium text-gray-900 mb-4">Langkah-langkah Setup:</h4>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                  <span class="text-sm font-medium text-blue-600">1</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Buat GitHub App</p>
                  <p class="text-sm text-gray-600 mb-2">Pergi ke <a href="https://github.com/settings/apps" target="_blank" class="text-blue-600 hover:underline">GitHub Apps</a> dan buat aplikasi baru</p>
                  <div class="bg-gray-50 p-3 rounded text-sm font-mono text-gray-800">
                    Homepage URL: <span class="text-blue-600">https://your-domain.com</span><br>
                    Authorization callback URL: <span class="text-blue-600">https://your-domain.com/api/auth</span>
                  </div>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                  <span class="text-sm font-medium text-blue-600">2</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Konfigurasi Permissions</p>
                  <p class="text-sm text-gray-600 mb-2">Atur permissions untuk repository access:</p>
                  <div class="bg-gray-50 p-3 rounded text-sm">
                    <strong>Repository permissions:</strong><br>
                    • Contents: Read and write<br>
                    • Metadata: Read only<br>
                    • Pull requests: Read and write
                  </div>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                  <span class="text-sm font-medium text-blue-600">3</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Generate Client Secret</p>
                  <p class="text-sm text-gray-600 mb-2">Generate dan salin Client Secret dari GitHub App settings</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                  <span class="text-sm font-medium text-blue-600">4</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Konfigurasi Environment</p>
                  <p class="text-sm text-gray-600 mb-2">Set environment variables di Vercel atau hosting provider:</p>
                  <div class="bg-gray-50 p-3 rounded text-sm font-mono text-gray-800">
                    GITHUB_CLIENT_ID=your_client_id<br>
                    GITHUB_CLIENT_SECRET=your_client_secret
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <button id="auth-button" onclick="authenticateWithGitHub()" class="flex-1 bg-gray-900 hover:bg-gray-800 text-white py-3 px-6 rounded-lg font-medium transition-colors flex items-center justify-center">
              <i data-lucide="github" class="h-5 w-5 mr-2"></i>
              <span id="auth-button-text">Autentikasi dengan GitHub</span>
            </button>

            <button onclick="skipSetup()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-3 px-6 rounded-lg font-medium transition-colors">
              Lewati Setup
            </button>
          </div>

          <!-- Alternative Option -->
          <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
            <div class="flex">
              <div class="flex-shrink-0">
                <i data-lucide="info" class="h-5 w-5 text-blue-400"></i>
              </div>
              <div class="ml-3">
                <h4 class="text-sm font-medium text-blue-800">Alternatif: Edit Manual</h4>
                <p class="text-sm text-blue-700 mt-1">
                  Jika setup GitHub sulit, Anda bisa mengedit konten langsung di repository GitHub.
                  <a href="https://github.com/fandcomp/caaip-website" target="_blank" class="font-medium underline">Buka Repository</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Success Card (Hidden by default) -->
      <div id="success-card" class="hidden bg-white rounded-lg shadow-xl overflow-hidden card-hover">
        <div class="px-6 py-4 bg-green-50 border-b border-green-200">
          <h3 class="text-lg font-medium text-green-900 flex items-center">
            <i data-lucide="check-circle" class="h-5 w-5 mr-2 text-green-600"></i>
            Setup Berhasil!
          </h3>
        </div>
        <div class="p-6 text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i data-lucide="check-circle" class="h-8 w-8 text-green-600"></i>
          </div>
          <h4 class="text-xl font-medium text-gray-900 mb-2">GitHub Berhasil Dikonfigurasi</h4>
          <p class="text-gray-600 mb-6">Anda sekarang dapat mengedit konten menggunakan CMS editor.</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <button onclick="openEditor()" class="flex-1 bg-green-600 hover:bg-green-700 text-white py-3 px-6 rounded-lg font-medium transition-colors">
              Buka Editor Konten
            </button>
            <button onclick="goToDashboard()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-3 px-6 rounded-lg font-medium transition-colors">
              Kembali ke Dashboard
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Check authentication
    function checkAuth() {
      const isAuthenticated = localStorage.getItem('admin_authenticated') === 'true';
      const loginTime = localStorage.getItem('admin_login_time');

      if (!isAuthenticated || !loginTime) {
        window.location.href = '/admin/login/';
        return false;
      }

      // Check if login is still valid (24 hours)
      const now = Date.now();
      const loginTimestamp = parseInt(loginTime);
      const hoursDiff = (now - loginTimestamp) / (1000 * 60 * 60);

      if (hoursDiff > 24) {
        // Login expired, clear storage and redirect
        localStorage.removeItem('admin_authenticated');
        localStorage.removeItem('admin_login_time');
        localStorage.removeItem('github_token');
        localStorage.removeItem('github_user');
        window.location.href = '/admin/login/';
        return false;
      }

      return true;
    }

    // Check GitHub authentication status
    function checkGitHubStatus() {
      const githubToken = localStorage.getItem('github_token');
      const githubUser = localStorage.getItem('github_user');

      const statusIcon = document.getElementById('status-icon');
      const statusText = document.getElementById('status-text');
      const statusDetail = document.getElementById('status-detail');
      const userInfo = document.getElementById('user-info');
      const userAvatar = document.getElementById('user-avatar');
      const userName = document.getElementById('user-name');
      const authButton = document.getElementById('auth-button');
      const authButtonText = document.getElementById('auth-button-text');

      if (githubToken && githubUser) {
        // User is authenticated
        statusIcon.className = 'w-3 h-3 bg-green-500 rounded-full mr-3';
        statusText.textContent = 'Terhubung dengan GitHub';
        statusText.className = 'font-medium text-green-900';
        statusDetail.textContent = 'Siap untuk mengedit konten';

        // Show user info
        const userData = JSON.parse(githubUser);
        userAvatar.src = userData.avatar_url;
        userName.textContent = userData.login;
        userInfo.classList.remove('hidden');

        // Update button
        authButtonText.textContent = 'Edit Konten';
        authButton.onclick = openEditor;
      } else {
        // User not authenticated
        statusIcon.className = 'w-3 h-3 bg-yellow-500 rounded-full mr-3';
        statusText.textContent = 'Belum terhubung dengan GitHub';
        statusText.className = 'font-medium text-yellow-900';
        statusDetail.textContent = 'Diperlukan untuk mengedit konten';

        userInfo.classList.add('hidden');
        authButtonText.textContent = 'Autentikasi dengan GitHub';
        authButton.onclick = authenticateWithGitHub;
      }
    }

    // Authenticate with GitHub
    function authenticateWithGitHub() {
      // Redirect to GitHub OAuth
      const clientId = 'Ov23li2q8x8QhJ5Q8Q8Q'; // This should be from environment variables
      const redirectUri = encodeURIComponent(window.location.origin + '/api/auth');
      const scope = encodeURIComponent('repo');
      const state = Math.random().toString(36).substring(7);

      // Store state for verification
      localStorage.setItem('oauth_state', state);

      const authUrl = `https://github.com/login/oauth/authorize?client_id=${clientId}&redirect_uri=${redirectUri}&scope=${scope}&state=${state}`;
      window.location.href = authUrl;
    }

    // Open content editor
    function openEditor() {
      window.open('/admin/editor/', '_blank');
    }

    // Skip setup
    function skipSetup() {
      if (confirm('Apakah Anda yakin ingin melewati setup GitHub? Anda tidak akan dapat mengedit konten melalui CMS.')) {
        window.location.href = '/admin/dashboard/';
      }
    }

    // Go back to dashboard
    function goBack() {
      window.location.href = '/admin/dashboard/';
    }

    // Go to dashboard
    function goToDashboard() {
      window.location.href = '/admin/dashboard/';
    }

    // Logout function
    function logout() {
      if (confirm('Apakah Anda yakin ingin logout?')) {
        localStorage.removeItem('admin_authenticated');
        localStorage.removeItem('admin_login_time');
        localStorage.removeItem('github_token');
        localStorage.removeItem('github_user');
        window.location.href = '/admin/login/';
      }
    }

    // Check URL parameters for OAuth callback
    function checkOAuthCallback() {
      const urlParams = new URLSearchParams(window.location.search);
      const code = urlParams.get('code');
      const state = urlParams.get('state');
      const error = urlParams.get('error');

      if (error) {
        alert('Autentikasi GitHub gagal: ' + error);
        return;
      }

      if (code && state) {
        // Verify state
        const storedState = localStorage.getItem('oauth_state');
        if (state !== storedState) {
          alert('State verification failed. Please try again.');
          return;
        }

        // Exchange code for token
        exchangeCodeForToken(code);
      }
    }

    // Exchange authorization code for access token
    async function exchangeCodeForToken(code) {
      try {
        const response = await fetch('/api/auth', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ code })
        });

        if (response.ok) {
          const data = await response.json();
          if (data.access_token) {
            // Store token and user info
            localStorage.setItem('github_token', data.access_token);
            localStorage.setItem('github_user', JSON.stringify(data.user));

            // Show success card
            document.getElementById('setup-card').classList.add('hidden');
            document.getElementById('success-card').classList.remove('hidden');

            // Update status
            checkGitHubStatus();
          } else {
            throw new Error('No access token received');
          }
        } else {
          throw new Error('Failed to exchange code for token');
        }
      } catch (error) {
        console.error('OAuth error:', error);
        alert('Gagal mengautentikasi dengan GitHub. Silakan coba lagi.');
      }
    }

    // Initialize
    if (checkAuth()) {
      // Initialize Lucide icons
      document.addEventListener('DOMContentLoaded', () => {
        lucide.createIcons();
        checkGitHubStatus();
        checkOAuthCallback();
      });
    }
  </script>
</body>
</html>