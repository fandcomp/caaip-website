<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Admin - CAAIP</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <style>
    .dashboard-bg {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }
    .card-hover {
      transition: all 0.3s ease;
    }
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="dashboard-bg min-h-screen">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center">
            <img src="/images/logo-itb.png" alt="Logo CAAIP" class="h-8 w-auto mr-3">
            <h1 class="text-xl font-bold text-gray-900">Admin Dashboard</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">Selamat datang, Admin</span>
          <button onclick="logout()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            Logout
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <!-- Header -->
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Dashboard Admin CAAIP</h2>
        <p class="text-gray-600">Kelola konten dan pengaturan website CAAIP</p>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 card-hover">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <i data-lucide="file-text" class="h-6 w-6 text-blue-600"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Total Berita</p>
              <p class="text-2xl font-bold text-gray-900">--</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 card-hover">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <i data-lucide="calendar" class="h-6 w-6 text-green-600"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Agenda</p>
              <p class="text-2xl font-bold text-gray-900">--</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 card-hover">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <i data-lucide="users" class="h-6 w-6 text-purple-600"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Alumni</p>
              <p class="text-2xl font-bold text-gray-900">--</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 card-hover">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <i data-lucide="heart" class="h-6 w-6 text-red-600"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Kabar Duka</p>
              <p class="text-2xl font-bold text-gray-900">--</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Management -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Content Editor -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900 flex items-center">
              <i data-lucide="edit" class="h-5 w-5 mr-2 text-blue-600"></i>
              Editor Konten
            </h3>
            <p class="text-sm text-gray-600 mt-1">Kelola berita, agenda, dan konten lainnya</p>
          </div>
          <div class="p-6 space-y-4">
            <button onclick="openContentEditor('berita')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="file-text" class="h-5 w-5 text-blue-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Berita</p>
                  <p class="text-sm text-gray-600">Kelola berita dan pengumuman</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openContentEditor('agenda')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="calendar" class="h-5 w-5 text-green-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Agenda & Event</p>
                  <p class="text-sm text-gray-600">Kelola jadwal acara dan seminar</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openContentEditor('alumni')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="users" class="h-5 w-5 text-purple-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Alumni</p>
                  <p class="text-sm text-gray-600">Kelola data alumni CAAIP</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openContentEditor('kabar-duka')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="heart" class="h-5 w-5 text-red-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Kabar Duka</p>
                  <p class="text-sm text-gray-600">Kelola berita duka cita</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>
          </div>
        </div>

        <!-- System Settings -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900 flex items-center">
              <i data-lucide="settings" class="h-5 w-5 mr-2 text-gray-600"></i>
              Pengaturan Sistem
            </h3>
            <p class="text-sm text-gray-600 mt-1">Konfigurasi website dan sistem</p>
          </div>
          <div class="p-6 space-y-4">
            <button onclick="openSettings('general')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="globe" class="h-5 w-5 text-indigo-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Pengaturan Umum</p>
                  <p class="text-sm text-gray-600">Informasi website dan kontak</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openSettings('media')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="image" class="h-5 w-5 text-orange-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Media Library</p>
                  <p class="text-sm text-gray-600">Kelola gambar dan file media</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openSettings('backup')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="download" class="h-5 w-5 text-teal-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Backup & Export</p>
                  <p class="text-sm text-gray-600">Cadangkan data website</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>

            <button onclick="openSettings('analytics')" class="w-full flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <i data-lucide="bar-chart" class="h-5 w-5 text-pink-600 mr-3"></i>
                <div>
                  <p class="font-medium text-gray-900">Analytics</p>
                  <p class="text-sm text-gray-600">Lihat statistik pengunjung</p>
                </div>
              </div>
              <i data-lucide="chevron-right" class="h-5 w-5 text-gray-400"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="mt-8 bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 flex items-center">
            <i data-lucide="activity" class="h-5 w-5 mr-2 text-green-600"></i>
            Aktivitas Terbaru
          </h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <i data-lucide="file-text" class="h-4 w-4 text-blue-600"></i>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900">Berita baru ditambahkan</p>
                <p class="text-sm text-gray-600">"Pelatihan Pilot Terbang 2025"</p>
              </div>
              <div class="text-sm text-gray-500">2 jam yang lalu</div>
            </div>

            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <i data-lucide="calendar" class="h-4 w-4 text-green-600"></i>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900">Agenda diperbarui</p>
                <p class="text-sm text-gray-600">"Seminar Keselamatan Penerbangan"</p>
              </div>
              <div class="text-sm text-gray-500">5 jam yang lalu</div>
            </div>

            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                  <i data-lucide="users" class="h-4 w-4 text-purple-600"></i>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900">Data alumni ditambahkan</p>
                <p class="text-sm text-gray-600">Angkatan 2023 - 15 orang</p>
              </div>
              <div class="text-sm text-gray-500">1 hari yang lalu</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Check authentication
    function checkAuth() {
      const isAuthenticated = localStorage.getItem('admin_authenticated') === 'true';
      const loginTime = localStorage.getItem('admin_login_time');

      if (!isAuthenticated || !loginTime) {
        window.location.href = '/admin/login/';
        return false;
      }

      // Check if login is still valid (24 hours)
      const now = Date.now();
      const loginTimestamp = parseInt(loginTime);
      const hoursDiff = (now - loginTimestamp) / (1000 * 60 * 60);

      if (hoursDiff > 24) {
        // Login expired, clear storage and redirect
        localStorage.removeItem('admin_authenticated');
        localStorage.removeItem('admin_login_time');
        window.location.href = '/admin/login/';
        return false;
      }

      return true;
    }

    // Initialize authentication check
    if (!checkAuth()) {
      // This should not happen since login redirects here, but just in case
      window.location.href = '/admin/login/';
    }

    // Logout function
    function logout() {
      if (confirm('Apakah Anda yakin ingin logout?')) {
        localStorage.removeItem('admin_authenticated');
        localStorage.removeItem('admin_login_time');
        localStorage.removeItem('github_token');
        localStorage.removeItem('github_user');
        window.location.href = '/admin/login/';
      }
    }

    // Content Editor Functions
    function openContentEditor(type) {
      const githubToken = localStorage.getItem('github_token');
      if (!githubToken) {
        alert('Anda perlu mengautentikasi dengan GitHub terlebih dahulu untuk mengedit konten. Mengalihkan ke pengaturan GitHub...');
        window.location.href = '/admin/github-setup/';
        return;
      }

      // Open the CMS editor in a new tab
      const editorUrl = '/admin/editor/';
      window.open(editorUrl, '_blank');
    }

    // Settings Functions
    function openSettings(type) {
      alert(`Pengaturan ${type} akan segera tersedia.`);
    }

    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', () => {
      lucide.createIcons();
    });
  </script>
</body>
</html>